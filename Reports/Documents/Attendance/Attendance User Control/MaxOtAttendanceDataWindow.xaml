                    <GradientStop Color="#FF81818B" Offset="1"/>
                    <GradientStop Color="#FFC4C4D3" Offset="0.518"/>
                    <GradientStop Color="#FFC4C4D3" Offset="0.455"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="button2" Content="Button" Margin="2.796,3.212,2.174,5.681" Style="{DynamicResource ButtonStyle23}" RenderTransformOrigin="0.5,0.5" Grid.Column="9" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Click="button2_Click" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="Payment Period" Margin="0.02,6.09,4.828,0" FontWeight="Bold" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Foreground="White"/>
        <Label Content="EMP No" Margin="0.02,7.289,28.384,4.367" FontWeight="Bold" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="2" Foreground="White"/>
        <ComboBox ItemsSource="{Binding PayPeriod}" SelectedItem="{Binding CurrentPeriod}" SelectedValue="{Binding CurrentPeriod.period_id}" SelectedValuePath="period_id" DisplayMemberPath="period_name" Margin="0.172,7.093,3.95,3.551" Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="4"/>
        <ComboBox ItemsSource="{Binding Employee}" SelectedItem="{Binding CurrentEmployee}" SelectedValue="{Binding CurrentEmployee.empID}" SelectedValuePath="empID" DisplayMemberPath="empID" Margin="0.004,7.633,2.031,3.011" Grid.Row="7" Grid.Column="4"/>
        <Button Command="{Binding PrintButton}"  Content="Print" Margin="111.05,0.52,8.822,2.241" Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="3"/>
        <Button Command="{Binding ClearButton}" Content="Clear" Margin="8.97,0,5.505,2.761" Grid.Row="9" Grid.Column="7" Grid.ColumnSpan="2"/>

    </Grid>
</Window>