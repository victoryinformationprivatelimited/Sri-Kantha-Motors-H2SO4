        <Rectangle Fill="#FF233555" Margin="-15.93,-16.071,-16.117,-16.022" RadiusY="4" RadiusX="4" Stroke="#7E191818" StrokeThickness="16" Grid.ColumnSpan="12" Grid.RowSpan="12"/>

