        </DataGrid>
        <ComboBox IsReadOnly="True" ItemsSource="{Binding Leave_types}" DisplayMemberPath="name" SelectedItem="{Binding CurrentLeaveType}" VerticalAlignment="Top" Height="23" Margin="0.14,1.842,430.92,0" Grid.Column="3" Grid.Row="6"/>
        <Label Content="Leave Type" Margin="0.138,0.062,44.913,0" Height="26.927" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Semibold" FontWeight="Bold" Grid.Column="2" Grid.Row="6"/>
        <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0.503,1.979,430.557,0" VerticalAlignment="Top" Height="23" Grid.Column="3" Grid.Row="11"/>
        <Label Content="Leave Date" Margin="0.388,0.283,43.663,0" Height="26.706" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI Semibold" FontWeight="Bold" Grid.Column="2" Grid.Row="9"/>
        <Button Command="{Binding NewBtn}" Content="New" Margin="459.456,0.515,106.603,0" VerticalAlignment="Top" Height="25" Grid.Column="3" Grid.Row="13" Width="65"/>
        <Button Command="{Binding SaveBtn}" Content="Save" HorizontalAlignment="Left" Margin="551.14,0.515,0,0" VerticalAlignment="Top" Width="65" Height="25" Grid.Column="3" Grid.Row="13"/>
        <Rectangle Margin="0,0.091,0,39.011" HorizontalAlignment="Left" Width="792.993" Grid.Column="1"  Grid.Row="1" Grid.ColumnSpan="4">
        	<Rectangle.Fill>
        		<LinearGradientBrush EndPoint="0.645,0.387" StartPoint="0.309,0.509">
        			<GradientStop Color="#FF18233A" Offset="0"/>
        			<GradientStop Color="#FF18233A" Offset="1"/>
        			<GradientStop Color="#FF4C5691" Offset="0.518"/>
        			<GradientStop Color="#FF4C5691" Offset="0.455"/>
        		</LinearGradientBrush>
        	</Rectangle.Fill>
        </Rectangle>
        <Label Content="Bulk Leave Apply" Margin="22.716,4,606.268,42.029" FontSize="13.333" FontWeight="Bold" Foreground="White" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2">
        	<Label.Effect>
        		<DropShadowEffect ShadowDepth="3" BlurRadius="3"/>
        	</Label.Effect>
        </Label>
        <Button x:Name="button2" Content="Button" Margin="616.14,5,8.467,43.835" Style="{DynamicResource ButtonStyle23}" RenderTransformOrigin="1.55,0.81" Click="button2_Click_1" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1" >
