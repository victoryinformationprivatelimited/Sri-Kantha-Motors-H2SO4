                <TransformGroup>
                	<ScaleTransform/>
                	<SkewTransform/>
                	<RotateTransform/>
                	<TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image Grid.ColumnSpan="3" Margin="8.217,4,103.795,43.967" Grid.Row="1" Source="/ERP;component/Images/New_Button/New_Leave_Button/Bulk_Leave.png" Stretch="Fill" Width="30" Height="30"/>

    </Grid>
</Window>
