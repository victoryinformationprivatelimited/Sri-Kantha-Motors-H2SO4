<Window x:Class="ERP.Payroll.ThakralDB.MigrateSalaryDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MigrateSalaryDetailsWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Pay Period" HorizontalAlignment="Left" Margin="7,35,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Periods}" SelectedItem="{Binding CurrentPeriod}" DisplayMemberPath="period_name" HorizontalAlignment="Left" Margin="77,39,0,0" VerticalAlignment="Top" Width="198"/>
        <Button Command="{Binding btnSend}" Content="Send" HorizontalAlignment="Left" Margin="108,102,0,0" VerticalAlignment="Top" Width="75" Height="29"/>

    </Grid>
</Window>
