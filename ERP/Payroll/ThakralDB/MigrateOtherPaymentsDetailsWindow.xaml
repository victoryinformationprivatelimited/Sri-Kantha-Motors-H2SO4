<Window x:Class="ERP.Payroll.ThakralDB.MigrateOtherPaymentsDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MigrateOtherPaymentsDetailsWindow" Height="200" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Other Payment Name" HorizontalAlignment="Left" Margin="7,35,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Periods}" SelectedItem="{Binding CurrentPeriod}" DisplayMemberPath="Bonus_Period_Name" HorizontalAlignment="Left" Margin="136,39,0,0" VerticalAlignment="Top" Width="184"/>
        <Button Command="{Binding btnSend}" Content="Send" HorizontalAlignment="Left" Margin="108,102,0,0" VerticalAlignment="Top" Width="99" Height="29"/>
    </Grid>
</Window>
