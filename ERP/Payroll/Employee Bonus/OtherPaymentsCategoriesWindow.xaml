<Window x:Class="ERP.Payroll.Employee_Bonus.OtherPaymentsCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OtherPaymentsCategoriesWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="380" Width="400">
    <Grid>
        <Label Content="Other Payments Category Name" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="197,28,0,0" TextWrapping="Wrap" Text="{Binding CurrentEmployeeOtherPayment.other_payment_name}" VerticalAlignment="Top" Width="172"/>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding OtherPayments}" SelectedItem="{Binding CurrentEmployeeOtherPayment}" HorizontalAlignment="Left" Margin="10,74,0,0" VerticalAlignment="Top" Width="359" Height="209">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category ID" Width="*" Binding="{Binding other_payment_id}"/>
                <DataGridTextColumn Header="Category Name" Width="*" Binding="{Binding other_payment_name}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Command="{Binding SaveButton}" Content="Save" HorizontalAlignment="Left" Margin="274,295,0,0" VerticalAlignment="Top" Width="95" Height="29"/>

    </Grid>
</Window>
