        <RadioButton IsChecked="{Binding SummaryChk}" Visibility="{Binding RBSummaryDetail}" Content="Summary" HorizontalAlignment="Left" Margin="21,222,0,0" VerticalAlignment="Top" Foreground="White" FontSize="11"/>
