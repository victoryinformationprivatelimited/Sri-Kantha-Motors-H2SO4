        </ERP:CustomDataGrid>
        <ERP:CustomDataGrid IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding RemovedLoans,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" SelectedItemsList="{Binding RemovedLoansList,Mode=TwoWay}"  HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Height="201" Width="391">
            <ERP:CustomDataGrid.Columns>
                <DataGridTextColumn Header="EPF No" Width="*" Binding="{Binding epf_no}"/>
                <DataGridTextColumn Header="First Name" Width="*" Binding="{Binding first_name}"/>
                <DataGridTextColumn Header="Last Name" Width="*" Binding="{Binding surname}"/>
                <DataGridTextColumn Header="Loan Name" Width="*" Binding="{Binding loan_name}"/>
            </ERP:CustomDataGrid.Columns>
        </ERP:CustomDataGrid>
        <Label Content="Not To Be Processed" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="To Be Processed" HorizontalAlignment="Left" Margin="460,77,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Filter By Department" Margin="10,39,725,0" VerticalAlignment="Top" Height="27" Foreground="#FF513838" FontStyle="Italic" FontWeight="Bold"/>
        <ComboBox ItemsSource="{Binding Department}" SelectedItem="{Binding CurrentDepartment}" DisplayMemberPath="department_name" HorizontalAlignment="Left" Margin="148,39,0,0" VerticalAlignment="Top" Width="183"/>

    </Grid>
</Window>
