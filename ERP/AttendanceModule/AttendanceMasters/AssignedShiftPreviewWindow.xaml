<Window x:Class="ERP.AttendanceModule.AttendanceMasters.AssignedShiftPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AssignedShiftPreviewWindow" Height="551" Width="847" AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#FF3D524A" Foreground="Black" OpacityMask="Black"
        KeyDown="Window_KeyDown"
        >
    <Grid Background="#76FFFFFF" >
        <ListBox ItemsSource="{Binding ShiftDays}" Background="#FF030B2C">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding NumRows}" Columns="{Binding NumCols}"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Background" Value="#7195E3"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
