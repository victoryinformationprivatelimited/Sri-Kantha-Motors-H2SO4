        <DatePicker  SelectedDate="{Binding ReportDate, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="177,127,0,0" VerticalAlignment="Top" Width="159" Height="24" />

        <ERP:CustomDataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding EmployeeNopayDays}" SelectedItem="{Binding CurrentEmployeeNopayDay}" SelectedItemsList="{Binding CurrentNopayList, Mode=TwoWay}" HorizontalAlignment="Left" Margin="26,211,0,0" VerticalAlignment="Top" Height="199" Width="367">
