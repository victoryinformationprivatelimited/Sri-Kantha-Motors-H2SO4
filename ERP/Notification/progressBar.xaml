<UserControl x:Class="ERP.Notification.progressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="820.895" Background="#FFF1F1F1" Height="338.806">
    <Grid Margin="20,152,10,157">
        <ProgressBar Margin="0,3,0,3" Height="20" Value="{Binding Path=Value}" Minimum="{Binding Min}" Maximum="{Binding Max}"/>
        <Label Content="{Binding Path=StatusString1}" HorizontalAlignment="Left" Height="26" Margin="0,30,0,-26" VerticalAlignment="Top" Width="791"/>
        <Label Content="{Binding Path=StatusString2}" HorizontalAlignment="Left" Height="30" Margin="0,61,0,-61" VerticalAlignment="Top" Width="791"/>
    </Grid>



</UserControl>
