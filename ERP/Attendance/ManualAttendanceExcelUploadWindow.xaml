<Window x:Class="ERP.Attendance.ManualAttendanceExcelUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManualAttendanceExcelUploadWindow" Height="250" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Button Command="{Binding BtnStart}" Content="Upload" HorizontalAlignment="Left" Margin="264,157,0,0" VerticalAlignment="Top" Width="194" Height="33"/>
        <Label Content="File Path" HorizontalAlignment="Left" Margin="10,43,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Path}" HorizontalAlignment="Left" Height="54" Margin="84,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="259"/>
        <Button Command="{Binding BtnBrowse}" Content="Browse" HorizontalAlignment="Left" Margin="372,46,0,0" VerticalAlignment="Top" Width="86" Height="23"/>

    </Grid>
</Window>
