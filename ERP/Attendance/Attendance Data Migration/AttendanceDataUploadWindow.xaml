        <Button x:Name="Attendence_Data_Migration" Content="Button" Margin="906.048,15.999,7.452,410.5" Style="{DynamicResource ButtonStyle5}" RenderTransformOrigin="0.5,0.5" Click="Attendence_Data_Migration_Click" Width="20" Height="20">
            <Button.RenderTransform>
                <TransformGroup>
                	<ScaleTransform/>
                	<SkewTransform/>
                	<RotateTransform/>
                	<TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Rectangle Margin="-0.119,52.302,0.119,355.021">
        	<Rectangle.Fill>
        		<LinearGradientBrush EndPoint="0.645,0.387" StartPoint="0.309,0.509">
        			<GradientStop Color="#FF81818B" Offset="0"/>
        			<GradientStop Color="#FF81818B" Offset="1"/>
        			<GradientStop Color="#FFB2B2BD" Offset="0.655"/>
        			<GradientStop Color="#FFC4C4D3" Offset="0.401"/>
        		</LinearGradientBrush>
        	</Rectangle.Fill>
        </Rectangle>
        <Label Content="Pay Period" HorizontalAlignment="Left" Margin="599.625,58.707,0,0" VerticalAlignment="Top" Foreground="White"/>
        <ComboBox ItemsSource="{Binding Periods}" SelectedItem="{Binding CurrentPeriod}" DisplayMemberPath="period_name" SelectedValuePath="period_id" IsEditable="True" HorizontalAlignment="Left" Margin="696.048,60.335,0,0" VerticalAlignment="Top" Width="230" Height="23"/>
        <Label Content="Attendance Data Migration" HorizontalAlignment="Left" Height="36" Margin="10,8.001,0,0" VerticalAlignment="Top" Width="213.211" FontSize="16" FontFamily="Segoe UI Semibold" Foreground="White"/>

    </Grid>
</Window>
